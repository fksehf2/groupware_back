	<!-- DispatcherServlet Context: defines this servlet's request-processing infrastructure -->
	
	<!-- Enables the Spring MVC @Controller programming model -->
	<annotation-driven />

	<!-- Handles HTTP GET requests for /resources/** by efficiently serving up static resources in the ${webappRoot}/resources directory -->
	<resources mapping="/resources/**" location="/resources/" />
	
	<resources mapping="/css/**" location="/css/" />
	<resources mapping="/js/**" location="/js/" />
	<resources mapping="/images/**" location="/images/" />
	<resources mapping="/fonts/**" location="/fonts/" />
	<!-- 
	<resources mapping="/assets/**" location="/assets/" />
	<resources mapping="/img/**" location="/img/" />
	 -->
	
	
	<!-- Resolves views selected for rendering by @Controllers to .jsp resources in the /WEB-INF/views directory -->
	<beans:bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<beans:property name="prefix" value="/WEB-INF/views/" />
		<beans:property name="suffix" value=".jsp" />
	</beans:bean>
	
	<beans:bean name="ajaxMainView" class="org.springframework.web.servlet.view.json.MappingJackson2JsonView" />
	
	<context:component-scan base-package="jims,frame">
		<context:include-filter expression="org.springframework.stereotype.Controller" type="annotation"/>
		<context:exclude-filter expression="org.springframework.stereotype.Service" type="annotation"/>
		<context:exclude-filter expression="org.springframework.stereotype.Repository" type="annotation"/>
	</context:component-scan>
	
	<interceptors>
		<interceptor>
			<mapping path="/**/*.do" />
			<beans:bean class="egovframework.com.sym.log.wlg.web.EgovWebLogInterceptor" />
			
		</interceptor>
		<interceptor>
			<mapping path="/**/*.do" />
			<exclude-mapping path="/index.do"/>
			<exclude-mapping path="/login/login.do"/> <!-- 로그인 화면으로 이동 삭제 예정-->

			<exclude-mapping path="/flyt/login/indexFLytLoginIDtl.do"/> <!-- 로그인 화면으로 이동 -->
			<exclude-mapping path="/flyt/login/procFLytLoginSessoutPDtl.do"/> <!-- Session Out 페이지로 이동 -->
			<exclude-mapping path="/flyt/login/procFLytLoginPDtl.do"/>     <!-- 로그인 처리1  -->
			<exclude-mapping path="/flyt/login/procFLytLoginPDtl2.do"/>    <!-- 로그인 처리2  -->
			<exclude-mapping path="/flyt/login/checkPwdError.do"/>    <!-- 비밀번호5회 실패  -->
			<exclude-mapping path="/flyt/login/indexFLytLoginFindIDPDtlPop.do"/> <!--  로그인 화면 > ID 찾기 -->
			<exclude-mapping path="/flyt/login/findIDFLytLoginFindIDPDtlPop.do"/> <!--  ID 찾기 화면 > ID 찾기 -->
			<exclude-mapping path="/flyt/login/indexFLytLoginFindPWPDtlPop.do"/> <!--  로그인 화면 > 비번 찾기 -->
			<exclude-mapping path="/flyt/login/findPWFLytLoginFindPWPDtlPop.do"/> <!--  비번찾기 화면 > 비번 찾기 -->
			<exclude-mapping path="/flyt/login/chgPWFLytLoginFindPWPDtlPop.do"/> <!--  비번찾기 화면 > 비번 변경 -->
			<exclude-mapping path="/flyt/login/lckCncFLytLoginFindPWPDtlPop.do"/> <!--  비번찾기 화면 > 로그인 해제 -->
			<exclude-mapping path="/flyt/login/procFLytLoginOverPWPDtl.do"/> <!--  비밀번호 3개월 -->
			<exclude-mapping path="/fsys/alam/regEvdcWarnAlam.do"/> <!-- 미승인 장비 반출 알람 등록 요청 -->
			
			
			
			<beans:bean class="egovframework.com.cmm.interceptor.AuthenticInterceptor" />
		</interceptor>
		
			
	</interceptors>
	
</beans:beans>








